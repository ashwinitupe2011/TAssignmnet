<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    android:id="@+id/cardView"
    app:cardBackgroundColor="@color/cellBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColor="@color/TitleColor"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_margin="10sp"
            android:layout_toStartOf="@+id/imArticleImage"
            android:layout_toLeftOf="@+id/imArticleImage"
            android:textColor="#000"
            android:textSize="@dimen/text_description"
            android:textStyle="normal" />



        <ImageView
            android:id="@+id/imArticleImage"
            android:layout_width="125sp"
            android:layout_height="125sp"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/image_bottom_margin"
            android:contentDescription="@string/content_description"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
          />



    </RelativeLayout>



</android.support.v7.widget.CardView>